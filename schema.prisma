datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  createdAt DateTime @default(now())
}

model AppUser {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  createdAt DateTime @default(now())
}

model Alert {
  id        Int      @id @default(autoincrement())
  text      String
  isActive  Boolean  @default(true)
  username  String
  createdAt DateTime @default(now())
}

model Court {
  id              Int               @id @default(autoincrement())
  name            String
  buildingName    String
  address         String
  date            DateTime          @default(now())
  civilListing    CivilListing[]
  criminalListing CriminalListing[]
}

model CivilListing {
  id          Int      @id @default(autoincrement())
  time        String
  matterTitle String
  matterNo    String
  floorCourt  String
  createdAt   DateTime @default(now())
  courtId     Int
  court       Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)
}

model CriminalListing {
  id         Int      @id @default(autoincrement())
  time       String
  name       String
  floorCourt String
  createdAt  DateTime @default(now())
  courtId    Int
  court      Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)
}
